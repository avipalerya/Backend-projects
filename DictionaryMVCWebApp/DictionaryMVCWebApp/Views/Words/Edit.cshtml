@model DictionaryMVCWebApp.Models.Word

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<hr />
<div class="card">
    <div class="col-md-4 row card text-white bg-info mb-3" style="max-width: 25rem;">
        <form asp-action="Edit" class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Words" class="control-label"></label>
                <input asp-for="Words" class="form-control" />
                <span asp-validation-for="Words" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Definition" class="control-label"></label>
                <input asp-for="Definition" class="form-control" />
                <span asp-validation-for="Definition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index" class="card-footer btn btn-light m-3">Back to List</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
